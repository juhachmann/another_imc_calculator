<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="60.0" fx:id="mainBox" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.ResultController">

    <VBox alignment="CENTER" spacing="15" >
        <VBox alignment="CENTER" spacing="5">
            <Label styleClass="text-bold, title-4" text="Seu IMC: " />
            <Text fx:id="imcText" styleClass="title-4" GridPane.columnIndex="1"/>
        </VBox>
        <VBox alignment="CENTER" spacing="5">
            <Label styleClass="text-bold, title-4" text="Classificação: " />
            <Text textAlignment="CENTER" styleClass="title-4" fx:id="classificacaoText"/>
        </VBox>
        <HBox alignment="CENTER" spacing="3" fx:id="categoriaBox">
            <Label styleClass="text-muted" text="Categoria: " />
            <Text styleClass="text-muted" textAlignment="CENTER" fx:id="categoriaText"/>
        </HBox>
    </VBox>

    <Button onAction="#reset" text="Ok" />

</VBox>